<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- Border Color -->
            <stroke
                android:width="1dp"
                android:color="@color/colorComponentViewStroke" />

            <!-- Round Corners -->
            <corners android:radius="2dp" />
            <!-- Padding-->
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>
    </item>

</layer-list>