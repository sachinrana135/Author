<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <!-- Background Color -->
            <solid android:color="@color/colorComponentViewStateFocused" />

            <!-- Border Color -->
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" />

            <!-- Round Corners -->
            <corners android:radius="2dp" />
            <!-- Padding-->
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>
    </item>


</layer-list>