<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfanse.author.Fragments.CanvasOptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/layout_canvas_options_fragment_canvas_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_xsmall">

                <LinearLayout
                    android:id="@+id/layout_colorize_fragment_canvas_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_colorize_fragment_canvas_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_colorize_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_canvas_color_picker"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_gallery_fragment_canvas_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_gallery_fragment_canvas_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_gallery_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_canvas_image"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_add_photo_fragment_canvas_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_add_photo_fragment_canvas_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_photo_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_add_image"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_add_text_fragment_canvas_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_add_text_fragment_canvas_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_add_text"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_add_box_fragment_canvas_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_add_box_fragment_canvas_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_box_white_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_add_box"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/HorizontalDivider"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small" />

        <LinearLayout
            android:id="@+id/layout_canvas_themes_fragment_canvas_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_canvas_themes_fragment_canvas_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
