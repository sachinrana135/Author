<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alfanse.author.Fragments.ComponentTextViewOptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_text_format_fragment_component_textview_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="66"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_xsmall">

                    <LinearLayout
                        android:id="@+id/layout_format_left_align_fragment_component_textview_options"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/image_format_left_align_fragment_component_textview_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_format_align_left_white_24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_format_center_align_fragment_component_textview_options"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/image_format_center_align_fragment_component_textview_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_format_align_center_white_24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_format_right_align_fragment_component_textview_options"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/image_format_right_align_fragment_component_textview_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_format_align_right_white_24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_format_bold_fragment_component_textview_options"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/image_format_bold_fragment_component_textview_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_format_bold_white_24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_format_italic_fragment_component_textview_options"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/image_format_italic_fragment_component_textview_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_format_italic_white_24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_format_underline_fragment_component_textview_options"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/spacing_xsmall">

                        <ImageView
                            android:id="@+id/image_format_underline_fragment_component_textview_options"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_format_underlined_white_24dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/layout_copy_fragment_component_textview_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_copy_fragment_component_textview_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_content_copy_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_copy"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_bring_to_front_fragment_component_textview_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_bring_to_front_fragment_component_textview_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_bring_to_front_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_bring_to_front"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_colorize_fragment_component_textview_options"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xsmall">

                    <ImageView
                        android:id="@+id/image_colorize_fragment_component_textview_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_colorize_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_item_font_color_picker"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_xsmall" />

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/HorizontalDivider"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_text_size_fragment_component_textview_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="66"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/value_seekbar_fragment_component_textview_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_xlarge" />

                <SeekBar
                    android:id="@+id/seekbar_textsize_fragment_component_textview_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_font_family_fragment_component_textview_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="66"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_fonts_fragment_component_textview_options"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_options_container_fragment_component_textview_options"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_back_option_item_fragment_component_textview_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xsmall">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_image_tag"
                    app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_text_tag"
                    android:text="@string/option_item_back"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_xsmall" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_format_option_item_fragment_component_textview_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xsmall">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_image_tag"
                    app:srcCompat="@drawable/ic_main_option_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_text_tag"
                    android:text="@string/option_item_format"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_xsmall" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_text_size_option_item_fragment_component_textview_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xsmall">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_image_tag"
                    app:srcCompat="@drawable/ic_format_size_white_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_text_tag"
                    android:text="@string/option_item_text_size"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_xsmall" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_font_option_item_fragment_component_textview_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xsmall">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_image_tag"
                    app:srcCompat="@drawable/ic_format_font_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="@string/option_item_text_tag"
                    android:text="@string/option_item_font"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_xsmall" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
